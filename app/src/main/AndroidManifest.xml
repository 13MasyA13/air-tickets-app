<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.golik.khai.air_tickets_app">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_main_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_main_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="ua.khai.golik.layoutsCreating.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="ua.khai.golik.layoutsCreating.LoggingActivity">
            <intent-filter>
                <action android:name="main.logging"/>

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name="ua.khai.golik.layoutsCreating.RegisterActivity">
            <intent-filter>
                <action android:name="register"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name="ua.khai.golik.layoutsCreating.AboutActivity">
            <intent-filter>
                <action android:name="about"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name="ua.khai.golik.layoutsCreating.HelpActivity">
            <intent-filter>
                <action android:name="help"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name="ua.khai.golik.layoutsCreating.MakeOrderActivity">
            <intent-filter>
                <action android:name="make.order"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name="ua.khai.golik.layoutsCreating.FirstDateActivity">
            <intent-filter>
                <action android:name="first.date"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name="ua.khai.golik.layoutsCreating.SecondDateActivity">
            <intent-filter>
                <action android:name="second.date"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name="ua.khai.golik.layoutsCreating.MyOrdersActivity">
            <intent-filter>
                <action android:name="my.orders"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name="ua.khai.golik.layoutsCreating.PersonalAreaActivity">
            <intent-filter>
                <action android:name="personal.area"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name="ua.khai.golik.layoutsCreating.DBManagementActivity">
            <intent-filter>
                <action android:name="db-management"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

    </application>

</manifest>